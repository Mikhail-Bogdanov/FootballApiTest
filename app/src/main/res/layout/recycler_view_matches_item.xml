<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_homeTeam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_result_homeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="3dp"
                android:text="Draw"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_name_homeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="3dp"
                android:text="Chicago Super"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_city_homeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="3dp"
                android:text="Chicago"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="start"
                    android:layout_gravity="bottom"
                    android:padding="3dp"
                    android:text="Score:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_score_homeTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="end"
                    android:layout_gravity="bottom"
                    android:padding="3dp"
                    android:text="125"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_statistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_final"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="Final"
            android:layout_weight="0.7"
            android:gravity="center|top"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="2022-10-06"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_margin="5dp"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:textSize="12sp"
                android:text="Season:" />

            <TextView
                android:id="@+id/tv_season"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="2023"
                android:gravity="center|start"
                android:layout_margin="5dp"
                android:padding="3dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_visitorTeam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_result_visitorTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:text="Draw"
            android:gravity="end"
            android:layout_margin="5dp"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tv_name_visitorTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:text="Chicago Super"
            android:gravity="end"
            android:layout_margin="5dp"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tv_city_visitorTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:text="Chicago"
            android:layout_gravity="end|bottom"
            android:gravity="end"
            android:layout_margin="5dp"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="end|bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:text="Score:" />

            <TextView
                android:id="@+id/tv_score_visitorTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="125"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:padding="3dp" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp" />

</LinearLayout>